@model List<Template.Models.Selection>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <div class="container">
        <form method="post" onsubmit="return checkAndConfirm(@Model.Count)" action="/Home/Add">
            <div class="row">
                <div class="col-lg-12">
                    <select required class="form-control" name="CourseCode" id="CourseCode">
                    </select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-success btn-block" type="submit">Add Lecture</button>
                </div>
            </div>
        </form>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <tr>
                        <th>
                            Selection ID
                        </th>
                        <th>
                            Student Number
                        </th>
                        <th>
                            Lecture Code
                        </th>
                    </tr>
                    @foreach (Template.Models.Selection selection in Model)
                    {
                        <tr>
                            <td>
                                @selection.SelectionID
                            </td>
                            <td>
                                @selection.StudentNumber
                            </td>
                            <td>
                                @selection.CourseCode
                            </td>
                            <td>
                                <a class="btn btn-danger" href="/Home/Remove?SelectionID=@selection.SelectionID">Remove Course</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                Total Course:  @Model.Count
            </div>
        </div>
    </div>
    <script src="~/Scripts/Index.js"></script>
</body>
</html>
